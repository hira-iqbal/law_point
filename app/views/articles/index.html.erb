<div class="w-60 p-3">
  <% if user_signed_in? %>
    <div class="mt-3 d-flex flex-row-reverse">
      <%= link_to "Create Article", new_article_path, class: "btn btn-primary", style: "margin-right: 30px;" %>
    </div>
  <% end %>
  <div class="d-flex flex-row row">
    <% @articles.each do |article| %>
      <div class="card mt-2 col-3" style="width: 400px; margin-left: 10px" >
        <%= image_tag "card_image.jpeg", class: "d-inline-block align-text-top card-img-top", style: "width: 100%" %>
        <div class="card-body">
          <h5 class="card-title"> <%= article.title %></h5>
          <p class="card-text p-ellipsis"><%= article.body.truncate(100, omission: '.....') %></p>
          <%= link_to "Read More", article, style:"text-decoration:none" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="mt-3 d-flex flex-row-reverse" style="margin-right: 30px;" >
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
