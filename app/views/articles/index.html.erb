
    <div class="w-60 p-3">
      <% if user_signed_in? %>
        <div class="d-flex flex-row-reverse" style="margin-top: -70px">
          <%= link_to "Create Article", new_article_path, class: "btn btn-primary", style: "margin-right: 30px;" %>
        </div>
      <% end %>
      <div class="d-flex mb-5 mt-2">
        <% @articles.each do |article| %>
          <div class="polaroid">
            <%= image_tag "card_image.jpeg" %>
            <div class="container">
              <h5><%= article.title %></h5>
              <p class="max-lines"><%= article.body %></p>
              <%= link_to "Read More", article, style:"text-decoration:none", class: "read-more" %>
            </div>
          </div>
        <% end %>
      </div>
      <% if @pagy.next.present? %>
        <div class="mt-3 d-flex flex-row-reverse" style="margin-right: 30px;" >
          <%= pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      <% end %>
    </div>
  </body>
</html>
