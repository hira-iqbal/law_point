<div class="w-75 p-3" style="margin-left: 12.5%">
  <% if user_signed_in? %>
    <div class="mt-3 d-flex flex-row-reverse">
      <%= link_to "Create Article", new_article_path, class: "btn btn-primary" %>
    </div>
  <% end %>
  <% @articles.each do |article| %>
    <div class="card mt-2">
      <div class="card-body">
        <h5 class="card-title"> <%= article.title %></h5>
        <p class="card-text p-ellipsis"><%= article.body %></p>
        <%= link_to "Read More", article, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <div class= "mt-3 d-flex flex-row-reverse">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
