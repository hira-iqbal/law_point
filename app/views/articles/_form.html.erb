<div class="d-flex justify-content-center">
  <%= form_with model: @article do |form| %>
    <div class= "form-group">
      <h5><%= form.label :title %>:</h5>
      <%= form.text_field :title , class:"form-control", size: 70 %>
    </div>

    <div class= "form-group mt-3">
      <h5><%= form.label :Description %>:</h5>
      <%= form.text_area :body, class: "form-control", size: 70 %>
    </div><br>

    <div class="form-group mt-3">
      <h5><%= form.label :article_type %>:</h5>
      <%= form.select :article_type_id, article_type_options, { include_blank: "Select an article type" }, class: "form-control" %>
    </div><br>

    <div class="d-flex flex-row-reverse" style="margin-top: -15px">
      <%= form.submit class: "btn btn-success" %>
    </div>
  <% end %>
</div>
